# Pipeline Monitor API Environment Variables

# Server configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Kafka configuration
LOOM_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Database configuration (TimescaleDB/PostgreSQL)
LOOM_DATABASE_HOST=localhost
LOOM_DATABASE_PORT=5432
LOOM_DATABASE_NAME=loom
LOOM_DATABASE_USER=loom
LOOM_DATABASE_PASSWORD=loom
LOOM_DATABASE_SSL=false

# CORS configuration
CORS_ORIGIN=http://localhost:3000

# Cache settings
MAX_TOPIC_MESSAGES=100
CACHE_TIMEOUT=30000

# Monitoring intervals
METRICS_INTERVAL=5000
HEALTH_CHECK_INTERVAL=10000
