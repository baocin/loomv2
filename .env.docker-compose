# Docker Compose environment variables for optimal builds

# Enable BuildKit for better caching and faster builds
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
BUILDKIT_PROGRESS=plain

# Use inline cache for even better layer reuse
BUILDKIT_INLINE_CACHE=1

# Git metadata (these will be overridden by the Makefile)
GIT_COMMIT=unknown
GIT_BRANCH=unknown
BUILD_DATE=unknown
BUILD_VERSION=latest
